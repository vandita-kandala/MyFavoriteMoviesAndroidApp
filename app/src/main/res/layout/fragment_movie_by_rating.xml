<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.first.myfavouritemoviesfragment.MovieByRating">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Enter Name"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:id="@+id/Name_display"
            android:inputType="textPersonName" />

        <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/Name_display"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Genre:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/hello"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="45dp"
            android:id="@+id/hello"
            >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/Description_display"
                    android:height="100dp"
                    android:width="400dp"

                    android:layout_below="@+id/textView2"

                    android:background="#F0F0F0"/>



        </ScrollView>




        <TextView
            android:text="Year:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:text=""
            android:hint="Enter the Link"
            android:ems="10"
            android:id="@+id/Imdb_display"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/Year_display"
            android:layout_alignStart="@+id/Year_display" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Select"
            android:ems="10"
            android:id="@+id/Genre_display"
            android:entries="@array/moviegenre"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/Name_display"
            android:layout_alignStart="@+id/Name_display"
            android:layout_marginLeft="14dp"
            android:layout_alignRight="@+id/Description_display"
            android:layout_alignEnd="@+id/Description_display"/>



        <TextView
            android:text="IMDB:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/Year_display"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Rating:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/Genre_display"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Title:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignBaseline="@+id/Name_display"
            android:layout_alignBottom="@+id/Name_display"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView2"
            android:id="@+id/Rating_display"
            android:layout_alignRight="@+id/Genre_display"
            android:layout_alignEnd="@+id/Genre_display" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:hint="Enter year"
            android:ems="10"
            android:id="@+id/Year_display"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/Genre_display"
            android:layout_alignStart="@+id/Genre_display" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/first"
            android:layout_alignTop="@+id/button6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageButton4"
            android:scaleType="fitXY"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:layout_toStartOf="@+id/Genre_display"
            android:layout_alignBottom="@+id/button6"
            android:layout_toLeftOf="@+id/Genre_display" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/next"
            android:id="@+id/imageButton6"
            android:scaleType="fitXY"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:layout_alignTop="@+id/button6"
            android:layout_toRightOf="@+id/button6"
            android:layout_alignBottom="@+id/button6" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/last"
            android:layout_alignBottom="@+id/imageButton6"
            android:layout_toRightOf="@+id/imageButton6"
            android:id="@+id/imageButton7"
            android:scaleType="fitXY"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:layout_alignTop="@+id/imageButton6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/previous"
            android:id="@+id/imageButton5"
            android:scaleType="fitXY"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:layout_alignTop="@+id/imageButton4"
            android:layout_toRightOf="@+id/imageButton4"
            android:layout_alignBottom="@+id/imageButton4" />

        <Button
            android:text="Finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_marginTop="38dp"
            android:width="100dp"
            android:height="60dp"
            android:layout_below="@+id/Imdb_display"
            android:layout_alignRight="@+id/Imdb_display"
            android:layout_alignEnd="@+id/Imdb_display" />


    </RelativeLayout>

</FrameLayout>
